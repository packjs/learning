{
    "compilerOptions": {
      "target": "es2016",
      "jsx": "react",
      "module": "ESNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "utils/*": ["src/utils/*"],
        "components/*": ["src/components/*"],
      },
    },
    "include": ["src/**/*", "typings.d.ts"],
    "exclude": ["node_modules"]
  }